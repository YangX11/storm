<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whyxs.mapper.com.whyxs.controller.blog.TagMapper">


    <select id="getTagsByArticleId" parameterType="string" resultType="BlogTag">
      SELECT
            t.*
        FROM
            blog_tag t,
            blog_article_tag_rel atr
        WHERE
            t.id = atr.tag_id
        and article_id = #{articleId}
    </select>

    <delete id="deleteArticleTagRelByArticleId">
        delete from blog_article_tag_rel where article_id = #{articleId}
    </delete>
    
</mapper>
